            <td class="form-control2">
                @Html.DisplayFor(model => item.RouteGiven)
            </td>
        </tr>
        <tr>
            <td class="form-control3">
                @Html.DisplayFor(model => item.HowTolerated)
            </td>
        </tr>
        <tr><td class="submitButtonHolder"> </td></tr>
    </table>
}


